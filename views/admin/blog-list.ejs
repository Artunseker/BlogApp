<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
   <%- include('../partials/nav') %>
    

    <div class="container mt-3">
        <div class="r0w">
            <div class="col-md-12 mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th style="width: 150px;">Resim</th>
                            <th>Başlık</th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bloglar.forEach(blog => { %>
                            <tr>
                                <td><%= blog.blogid %></td>
                                <td><img src="/static/images/<%= blog.image %>" class="img-fluid" alt="" ></td>
                                <td><%= blog.title %></td>
                                <td>
                                    <a class="btn btn-sm btn btn-primary" href="/admin/blogs/<%= blog.blogid %>">edit</a>
                                    <a class="btn btn-sm btn btn-danger" href="/admin/blog/delete/<%= blog.blogid %>">delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</body>
</html>
