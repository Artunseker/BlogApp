<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
   <%- include('../partials/nav') %>
    

    <div class="container mt-3">
        <div class="r0w">
            <div class="col-md-12 mt-3">
                <% if (action!="undefined" && action=="create") { %>
                    <div class="alert alert-success">
                        <strong>Başarılı!</strong> Kategori başarıyla oluşturuldu.
                    </div>
                <% } %>
                <% if (action!="undefined" && action=="edit") { %>
                    <div class="alert alert-success">
                        <%= categoryid %></strong>. Blog başarıyla güncellendi.
                    </div>
                <% } %>
                <% if (action!="undefined" && action=="delete") { %>
                    <div class="alert alert-danger">
                        <strong>Başarılı!</strong> Kategori başarıyla silindi.
                    </div>
                <% } %>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th>isim</th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => { %>
                            <tr>
                                <td><%= category.categoryid %></td>
                                <td><%= category.name %></td>
                                <td>
                                    <a class="btn btn-sm btn btn-primary" href="/admin/categories/<%= category.categoryid %>">edit</a>
                                    <a class="btn btn-sm btn btn-danger" href="/admin/category/delete/<%= category.categoryid %>">delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</body>
</html>
